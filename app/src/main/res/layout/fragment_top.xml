<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_layout_0"
    android:layout_width="match_parent"
    android:layout_height="440dp"
    android:orientation="vertical"
    tools:context=".workingWithFragments.FragmentTop">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="164dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/temperature_0"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:layout_gravity="bottom"
                android:gravity="start"
                android:text="@string/temperature_0"
                android:textColor="@color/light_text_color"
                android:textSize="70sp" />

            <TextView
                android:id="@+id/city_0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="5dp"
                android:alpha="0.7"
                android:text="@string/city"
                android:textColor="@color/light_text_color"
                android:textSize="20sp"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/date_0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:text="TextView"
                android:textColor="@color/light_text_color"
                android:textSize="12sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/weather_picture_0"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/rain" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical"
            android:textColor="@color/light_text_color">


            <TextView
                android:id="@+id/description_0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/thunderstorm"
                android:textColor="@color/light_text_color"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.7"
                    android:text="@string/wind_and_colon"
                    android:textColor="@color/light_text_color"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/wind_0"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_height="wrap_content"
                    android:alpha="0.7"
                    android:text="00.00"
                    android:textColor="@color/light_text_color"
                    android:textSize="12sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.7"
                    android:text="@string/pressure_and_colon"
                    android:textColor="@color/light_text_color"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/pressure_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:alpha="0.7"
                    android:text="1024"
                    android:textColor="@color/light_text_color"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.7"
                    android:text="@string/humidity_and_colon"
                    android:textColor="@color/light_text_color"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/humidity_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:alpha="0.7"
                    android:text="00"
                    android:textColor="@color/light_text_color"
                    android:textSize="12sp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
